
.main-chat
  .main-chat__group
    .main-chat__group__box-left
      .main-chat__group__box-left__group-name
        = @group.name
      .main-chat__group__box-left__member
        Member : 
        .main-chat__group__box-left__member__list
          %ul
          - @group.users.each do |user|
            %li= user.name
    = link_to edit_group_path(@group.id) do
      .main-chat__group__edit-btn
        Edit
  .messages
    = render @messages
  .main-chat__message-form
    =form_for [@group, @message] do |f|
      .main-chat__message-form__text
        =f.text_field :content, class: 'main-chat__message-form__box__body', placeholder: 'type a message'
        =f.label :image, class: 'btn' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'submit'
  