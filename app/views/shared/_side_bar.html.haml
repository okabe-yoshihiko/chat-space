.side-bar
 .side-bar__box
  .side-bar__box__top-items
   .side-bar__box__top-items__username
    =current_user.name
   .side-bar__box__top-items__name
    .side-bar__box__top-items__menu
     .side-bar__box__top-items__icon
      =link_to new_group_path do
       = icon('fas', 'edit')
     .side-bar__box__top-items__icon
      =link_to edit_user_path(current_user) do
       = icon('fas','cog')
 .side-bar__group
  - current_user.groups.each do |group|
   .side-bar__group__list
    = link_to group_messages_path(group) do
     .side-bar__group__list__groups
      = group.name
      .side-bar__group__list__message
       = group.show_last_message